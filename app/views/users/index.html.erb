<% if current_user %>
	<%= button_to 'create project', new_project_path, method: :get %>
<% end %>

<% @projects.each do |t| %>
	<div id = 'project-<%=t.id%>'><%= link_to t.project_title, project_path(t.id) %>| |<%= t.fund_goal %>
		<% if current_user.admin?%>
			<%= link_to 'delete this project!', project_path(t.id), class: 'remove' %>
		<% end %><br><br>
	</div>
<% end %>
